  echo_="!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"; echo "$echo_" >> $CONF_LOG; echo "$echo_"
  echo_=""; echo "$echo_" >> $CONF_LOG; echo "$echo_"
  rm Makefile $CONF_H $CONF_SH $SPEC $PKGC $MPKG
  exit
else
  if [ -z "$quick" ]; then
    test -n "$ECHO" && $ECHO "" > mkdepend
    test -n "$ECHO" && $ECHO "" > cobjects
    make depend
  fi
fi


