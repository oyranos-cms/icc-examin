  echo_="!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"; echo "$echo_" >> $CONF_LOG; echo "$echo_"
  echo_="!!!                     An ERROR occured                     !!!"; echo "$echo_" >> $CONF_LOG; echo "$echo_"
