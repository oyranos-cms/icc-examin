  echo "%doc AUTHORS COPYING ChangeLog README" >> $SPEC
  list=`while test -n "$text"; do text=${text%/*}; if [ "$text" = $libdir ]; then text=""; else echo $text; fi; done | sort`
  for i in $list; do echo "%dir $i" >> $SPEC; done
  echo "%dir %{cp_dir}" >> $SPEC
